<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PrimaryTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textSize">@dimen/view_notes_item_primary_text_size</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="SecondaryTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textSize">@dimen/view_notes_item_secondary_text_size</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="PrimaryColorAccentStyle">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="PrimaryColorBackButtonTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
